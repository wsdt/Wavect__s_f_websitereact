{
  "extends": "../../../_base/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "lib": [
      "es6",
      "dom"
    ],
    "declaration": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
